{
  "private": true,
  "scripts": {
    "dev": "concurrently \"basehub dev\" \"next dev --turbo\"",
    "build": "basehub && next build",
    "build:fresh": "pnpm clean && basehub && next build",
    "clean": "rimraf .next .basehub",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "migrations:generate": "drizzle-kit generate:mysql --schema=./drizzle/schema.ts --out=./drizzle/migrations",
    "migrations:run": "bun run drizzle/migrate.ts",
    "db:push": "drizzle-kit push",
    "format:write": "prettier --write \"**/*.{ts,tsx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx}\" --cache",
    "test:seo": "tsx scripts/test-seo.ts",
    "analyze:seo": "tsx scripts/test-seo.ts"
